{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sanofi-Inspired Design System",
  "description": "Design system extracted from Sanofi careers webpage for replication",
  "version": "1.0.0",
  "designSystem": {
    "colors": {
      "primary": {
        "purple": {
          "main": "#8B5CF6",
          "dark": "#7C3AED",
          "light": "#A78BFA",
          "description": "Primary brand color used for CTAs and highlights"
        },
        "sanofi": {
          "main": "#6366F1",
          "description": "Sanofi brand purple"
        }
      },
      "neutral": {
        "white": "#FFFFFF",
        "gray": {
          "50": "#F9FAFB",
          "100": "#F3F4F6",
          "200": "#E5E7EB",
          "300": "#D1D5DB",
          "400": "#9CA3AF",
          "500": "#6B7280",
          "600": "#4B5563",
          "700": "#374151",
          "800": "#1F2937",
          "900": "#111827"
        },
        "black": "#000000"
      },
      "accent": {
        "yellow": "#FCD34D",
        "green": "#10B981",
        "blue": "#3B82F6",
        "description": "Accent colors used in illustrations and highlights"
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": {
          "name": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "description": "Primary font family for headings and body text"
        },
        "display": {
          "name": "Inter, sans-serif",
          "description": "Display font for large headings"
        }
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeights": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.625
      },
      "textStyles": {
        "hero": {
          "fontSize": "4xl",
          "fontWeight": "bold",
          "lineHeight": "tight",
          "color": "gray.900"
        },
        "heading1": {
          "fontSize": "3xl",
          "fontWeight": "bold",
          "lineHeight": "tight"
        },
        "heading2": {
          "fontSize": "2xl",
          "fontWeight": "semibold",
          "lineHeight": "normal"
        },
        "body": {
          "fontSize": "base",
          "fontWeight": "normal",
          "lineHeight": "relaxed"
        },
        "navigation": {
          "fontSize": "sm",
          "fontWeight": "medium",
          "lineHeight": "normal"
        }
      }
    },
    "spacing": {
      "scale": "4px",
      "values": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem",
        "32": "8rem"
      }
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    "components": {
      "navigation": {
        "height": "64px",
        "backgroundColor": "white",
        "borderBottom": "1px solid #E5E7EB",
        "padding": "0 2rem",
        "logo": {
          "fontSize": "xl",
          "fontWeight": "bold",
          "color": "gray.900"
        },
        "links": {
          "fontSize": "sm",
          "fontWeight": "medium",
          "color": "gray.700",
          "hoverColor": "primary.purple.main",
          "spacing": "2rem"
        }
      },
      "buttons": {
        "primary": {
          "backgroundColor": "primary.purple.main",
          "color": "white",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "lg",
          "fontSize": "sm",
          "fontWeight": "medium",
          "hover": {
            "backgroundColor": "primary.purple.dark"
          },
          "transition": "all 0.2s ease-in-out"
        },
        "secondary": {
          "backgroundColor": "transparent",
          "color": "primary.purple.main",
          "border": "1px solid",
          "borderColor": "primary.purple.main",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "lg",
          "fontSize": "sm",
          "fontWeight": "medium",
          "hover": {
            "backgroundColor": "primary.purple.main",
            "color": "white"
          }
        }
      },
      "hero": {
        "backgroundColor": "gray.50",
        "padding": "4rem 2rem",
        "layout": "grid",
        "gridColumns": "1fr 1fr",
        "gap": "4rem",
        "alignItems": "center"
      },
      "card": {
        "backgroundColor": "white",
        "borderRadius": "xl",
        "padding": "2rem",
        "shadow": "md",
        "border": "1px solid #E5E7EB"
      }
    },
    "layout": {
      "container": {
        "maxWidth": "1200px",
        "margin": "0 auto",
        "padding": "0 2rem"
      },
      "grid": {
        "columns": 12,
        "gap": "2rem"
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      }
    },
    "illustrations": {
      "style": "modern-flat",
      "colorPalette": [
        "#FCD34D",
        "#10B981", 
        "#3B82F6",
        "#8B5CF6",
        "#F97316"
      ],
      "characteristics": {
        "rounded": true,
        "gradient": false,
        "shadows": "minimal",
        "style": "geometric-abstract"
      }
    },
    "interactions": {
      "transitions": {
        "default": "all 0.2s ease-in-out",
        "slow": "all 0.3s ease-in-out",
        "fast": "all 0.1s ease-in-out"
      },
      "hover": {
        "scale": "1.02",
        "shadow": "lg"
      },
      "focus": {
        "outline": "2px solid",
        "outlineColor": "primary.purple.main",
        "outlineOffset": "2px"
      }
    },
    "content": {
      "heroSection": {
        "structure": {
          "headline": {
            "pattern": "Let's [action word]",
            "emphasis": "action word in brand color",
            "fontSize": "4xl",
            "fontWeight": "bold"
          },
          "description": {
            "maxWidth": "500px",
            "fontSize": "lg",
            "lineHeight": "relaxed",
            "color": "gray.600"
          },
          "cta": {
            "type": "primary button",
            "text": "Action-oriented verb phrase",
            "placement": "below description"
          }
        }
      }
    },
    "accessibility": {
      "colorContrast": {
        "minimum": "AA",
        "target": "AAA"
      },
      "focusVisible": true,
      "semanticMarkup": true,
      "altText": "required for all images"
    }
  },
  "usage": {
    "description": "This design system is based on the Sanofi careers page and emphasizes clean, modern design with purple as the primary brand color, professional typography, and engaging illustrations.",
    "implementation": {
      "css": "Use CSS custom properties for colors and spacing",
      "components": "Build reusable components following the defined patterns",
      "responsive": "Mobile-first approach with defined breakpoints",
      "illustrations": "Use modern flat illustration style with defined color palette"
    }
  }
}
